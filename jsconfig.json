{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": [
    "./**/*.js",
    "./**/*.ts",
    "./types/**/*.d.ts",
    "./interfaces/**/*.d.ts",
    "index.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
